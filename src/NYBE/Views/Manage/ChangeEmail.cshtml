@model NYBE.Models.ManageViewModels.ChangeEmailViewModel

@{
    ViewData["Title"] = "Change Email";
}

<h2 class="text-center">@ViewData["Title"]</h2>

<div class="row">
    <div class="col-sm-10 col-sm-offset-2">
        <form asp-controller="Manage" asp-action="ChangeEmail" method="post" class="form-horizontal">
            <hr />
            <div class="form-group">
                <div class="col-sm-6 col-sm-offset-3">
                    <input asp-for="NewEmail" class="form-control" placeholder="New Email" />
                    <span asp-validation-for="NewEmail" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-6 col-sm-offset-3">
                    <input asp-for="ConfirmEmail" class="form-control" placeholder="Confirm New Email" />
                    <span asp-validation-for="ConfirmEmail" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-6 col-sm-offset-4">
                    <button type="button" onclick="history.go(-1)" class="btn btn-primary">Cancel</button>
                    <button type="submit" class="btn btn-success">Save Changes</button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
